<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyVersion>$(WcfAssemblyVersion)</AssemblyVersion>
    <StrongNameKeyId>Microsoft</StrongNameKeyId>
    <TargetFrameworks>net6.0;net461;</TargetFrameworks>
    <AssemblyName>System.ServiceModel.NetTcp</AssemblyName>
    <RootNamespace>System</RootNamespace>
    <CLSCompliant>true</CLSCompliant>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Compile Include="System.ServiceModel.NetTcp.cs" />
    <None Include="System.ServiceModel.NetTcp.netframework.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <None Include="System.ServiceModel.NetTcp.cs" />
    <Compile Include="System.ServiceModel.NetTcp.netframework.cs" />
  </ItemGroup>

  <!--<ItemGroup Condition="'$(TargetFramework)' == 'net461'" >-->
  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <Reference Include="System" />
    <Reference Include="System.IdentityModel" />
    <Reference Include="System.ServiceModel" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <ProjectReference Include="..\..\System.ServiceModel.Primitives\ref\System.ServiceModel.Primitives.Ref.csproj" />
    <ProjectReference Include="..\..\System.ServiceModel.NetFramingBase\src\System.ServiceModel.NetFramingBase.csproj" />
  </ItemGroup>
</Project>

<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <TargetGroup Condition="'$(TargetGroup)'==''" >netstandard2.0</TargetGroup>
  </PropertyGroup>
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />
  <PropertyGroup>
    <MinimumVisualStudioVersion>11.0</MinimumVisualStudioVersion>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>System.ServiceModel.Primitives.Tests</RootNamespace>
    <AssemblyName>System.ServiceModel.Primitives.Tests</AssemblyName>
    <TestCategories>InnerLoop</TestCategories>
    <SignAssembly>false</SignAssembly>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ProjectGuid>{856A232C-4292-4AC7-87FE-41AE0C22C4E4}</ProjectGuid>
  </PropertyGroup>
  <PropertyGroup>
    <DefineConstants Condition="'$(TargetGroup)' == 'netcoreapp'">$(DefineConstants);FEATURE_ETLEVENTS</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="**\*.cs" />
    <Compile Include="$(WcfInfrastructureCommonDir)**\*.cs" />
    <Compile Include="$(WcfUnitTestCommonDir)**\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <!-- Some internal types are needed, so we reference the implementation assembly, rather than the reference assembly. -->
    <TargetingPackExclusions Include="System.ServiceModel.Primitives" />
    <ReferenceFromRuntime Include="System.Private.ServiceModel" />

    <ReferenceFromRuntime Include="xunit.execution.dotnet" />
  </ItemGroup>

  <Import Project="$(WcfInfrastructureCommonDir)testproperties.props" />
  <Import Project="$(WcfInfrastructureCommonDir)testproperties.targets" />
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.targets))\dir.targets" />
  <!-- Add our code-gen target after the imports above because they reset $(CoreCompileDependsOn) -->
  <PropertyGroup>
    <CoreCompileDependsOn>$(CoreCompileDependsOn);CreateTestProperties</CoreCompileDependsOn>
  </PropertyGroup>
</Project>

<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyVersion>$(WcfAssemblyVersion)</AssemblyVersion>
    <StrongNameKeyId>Microsoft</StrongNameKeyId>
    <TargetFrameworks>net8.0;net462;</TargetFrameworks>
    <AssemblyName>System.ServiceModel.Http</AssemblyName>
    <RootNamespace>System.ServiceModel</RootNamespace>
    <CLSCompliant>true</CLSCompliant>
    <IsPartialFacadeAssembly Condition="'$(TargetFramework)' == 'net462'">true</IsPartialFacadeAssembly>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net462'" >
    <Compile Remove="System.ServiceModel.Http.cs" />
    <None Include="System.ServiceModel.Http.cs" />
    <Reference Include="System" />
    <Reference Include="System.IdentityModel" />
    <Reference Include="System.Runtime.Serialization" />
    <Reference Include="System.ServiceModel" />
    <Reference Include="System.Xml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Condition="'$(TargetFramework)' != 'net462'" Include="..\..\System.ServiceModel.Primitives\ref\System.ServiceModel.Primitives.Ref.csproj" />
  </ItemGroup>
</Project>